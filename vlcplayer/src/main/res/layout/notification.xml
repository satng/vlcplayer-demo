<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/notification_iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

    <TextView
        android:id="@+id/notification_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/notification_iv_logo"
        android:layout_toRightOf="@+id/notification_iv_logo"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/notification_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_tv_title"
        android:layout_toRightOf="@+id/notification_iv_logo"
        android:text="hello" />

    <ImageView
        android:id="@+id/notification_btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/abc_ic_menu_paste_mtrl_am_alpha" />

</RelativeLayout>